<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    tools:context=".GuardFragment">
    <TextView
        android:id="@+id/security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:text="Security"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        app:cardElevation="16dp"
        android:id="@+id/pink"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/card_pink"
        app:layout_constraintTop_toBottomOf="@id/security"
        android:layout_width="match_parent"
        android:layout_height="160dp"/>
    <TextView
        android:id="@+id/sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:text="SOS"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/pink"
        app:layout_constraintTop_toTopOf="@id/pink"/>
    <TextView
        android:text="In case of emergency, keep telling family member to contact me"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@id/pink"
        app:layout_constraintTop_toBottomOf="@id/sos"
        android:elevation="16dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/sos_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintTop_toTopOf="@id/pink"
        app:layout_constraintEnd_toEndOf="@id/pink"
        android:id="@+id/sos_img"
        android:elevation="16dp"
        android:src="@drawable/ic_sos"
        app:layout_constraintBottom_toBottomOf="@id/pink"
        android:layout_margin="16dp"
        android:layout_width="96dp"
        android:layout_height="96dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/card_green"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toBottomOf="@id/pink" />

    <TextView
        android:id="@+id/guard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:text="GUARD"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/green"
        app:layout_constraintTop_toTopOf="@id/green"/>
    <TextView
        android:text="Open when you are on a potentially dangerous journey"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@id/green"
        app:layout_constraintTop_toBottomOf="@id/guard"
        android:elevation="16dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/guard_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintTop_toTopOf="@id/green"
        app:layout_constraintEnd_toEndOf="@id/green"
        android:id="@+id/guard_img"
        android:elevation="16dp"
        android:src="@drawable/ic_guard"
        app:layout_constraintBottom_toBottomOf="@id/green"
        android:layout_margin="16dp"
        android:layout_width="96dp"
        android:layout_height="96dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>